<!DOCTYPE html>

<html> 
    <head> 
        <link rel="icon" href="/img/icon.png">
        <link rel='stylesheet' href='/css/styles.css'>
        <script src='./js/network-request.js'></script>
    </head>
    <body>
        <div class='main-content'>
            <h3>Welcome to the Golf App</h3>
            <form class="form" id="myForm">
                <input type="text" placeholder="email" name="inp_username">
                <input type="password" placeholder="password" name="inp_password">
                <button type="submit">Login</button>
            </form>
            <a href="/register">Register for an account</a>
        </div>
        {{>footer}}
        <script> 
            const myForm = document.getElementById("myForm")
            myForm.addEventListener('submit', async function (e) {
                e.preventDefault()
                const body = {
                    email: this[0].value,
                    password: this[1].value
                }
                
                try {
                    const data = await post(body,'/login', false)
                    document.cookie = "token=" + data.token;
                    window.open("/summary","_self")
                } catch (e) {
                    console.log('error')
                }

            })
        </script>
    </body>
</html>