	<script> 
	
		const $ad = document.getElementById('ad')
	
		const tryDisplay = function() {
			setTimeout(() => {
				if(document.documentElement.scrollTop > 300) {
					$ad.style.bottom = '0px'
				} else {
					tryDisplay()
				}
			}, 2000)
		}
	
		window.addEventListener('load', (event) => {

			setTimeout(() => {
				tryDisplay()
			}, 4000)
		})
		
		</script>
